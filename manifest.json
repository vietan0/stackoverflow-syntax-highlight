{
  "manifest_version": 2,
  "name": "Syntax Highlight",
  "version": "1.0.0",
  "description": "",
  "icons": {
    "48": "icons/PhCodeDuotone.png"
  },
  "permissions": ["storage"],
  "content_security_policy": "script-src 'self' https://cdn.tailwindcss.com;",
  "browser_action": {
    "default_icon": "icons/PhCodeDuotone.png",
    "default_title": "Syntax Highlight",
    "default_popup": "src/popup/index.html"
  },
  "content_scripts": [
    {
      "matches": [
        "*://*.stackoverflow.com/*"
      ],
      "js": [
        "src/guesslang.min.js",
        "dist/content.js"
      ]
    }
  ]
}
