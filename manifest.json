{
  "manifest_version": 2,
  "name": "StackOverflow Syntax Highlight",
  "version": "1.0.0",
  "description": "",
  "icons": {
    "48": "icons/F7LogoStackoverflow.png"
  },
  "permissions": ["storage"],
  "content_security_policy": "script-src 'self' 'wasm-unsafe-eval' 'unsafe-eval' https://cdn.tailwindcss.com;",
  "browser_action": {
    "default_icon": "icons/F7LogoStackoverflow.png",
    "default_title": "StackOverflow Syntax Highlight",
    "default_popup": "src/popup/index.html"
  },
  "background": {
    "scripts": [
      "src/guesslang.min.js",
      "dist/background.js"
    ]
  },
  "content_scripts": [
    {
      "matches": [
        "*://*.stackoverflow.com/*"
      ],
      "js": [
        "dist/content.js"
      ]
    }
  ]
}
